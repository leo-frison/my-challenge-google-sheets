html
    head        
       title Grand Slam
       meta(charset="utf-8")
       meta(name="viewport", content="width=device-width, initial-scale=1")
       
       style.
            body {
               background-image: url("https://thumbs.dreamstime.com/z/siluetas-del-jugador-de-tenis-vector-4272611.jpg");
            }

            h1 {
                 font-size:50px;
                 text-align: center;
                 color:black;
                 font-weight: bold;
                 font-style: italic;
                 background: white;
               }

            h3 button {
                 border-radius: 4px;
                 background-color: black;
                 border: none;
                 color: black;
                 text-align: center;
                 font-size: 20px;
                 padding: 10px;
                 width: 200px;
                 transition: all 0.5s;
                 cursor: pointer;
                 margin: 20px;
               }

            table {
                 background: black;
                 margin: auto;
                 color: yellow;
            }

            h3 button:hover {background-color: white}   
